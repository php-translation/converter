{
    "name": "php-translation/converter",
    "description": "Converts your translation files to Xliff",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "php-translation/symfony-storage": "^0.3.2",
        "symfony/console": "^2.7 || ^3.0",
        "symfony/yaml": "^2.7 || ^3.0",
        "symfony/finder": "^2.7 || ^3.0",
        "symfony/config": "^2.7 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36 || ^5.5 || ^6.2",
        "php-translation/symfony-bundle": "^0.4"
    },
    "autoload": {
        "psr-4": {
            "Translation\\Converter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translation\\Converter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
